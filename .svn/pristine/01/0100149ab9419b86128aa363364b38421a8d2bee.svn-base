                        <i class="weui-icon-checked"></i><span id="nv">女</span>
                    </label>
                </div>*@
                <label class="u-radio aa" data-name="radio1" style="float:right;margin-right:2%;" >
                    <input name="sex" type="radio" value="1">
                    <i class="icon"></i>
                    <span class="text">男</span>
                </label>
