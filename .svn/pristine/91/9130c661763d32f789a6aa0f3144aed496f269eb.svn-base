@using System.Data
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="author" content="jack">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,
 		user-scalable=no" />
    <!-- 适应手机屏幕，防止屏幕缩放 -->
    <!--样式-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>个人奖金明细</title>
    <style type="text/css">
        #right_div {
            float: left;
        }

        #right_div1 {
            width: 100%;
            overflow: hidden;
        }

        #right_divx {
            width: 100%;
        }

        #right_div2 {
            margin-top: -20px;
            width: 100%;
            height: 400px;
            overflow: auto;
        }

        #right_table1 {
            width: 100%;
        }

            #right_table1 th {
                background: #E9F8FF;
                text-align: center;
                width: 25%;
            }

        #right_table2 td {
            width: 25%;
            text-align: center;
        }
    </style>
</head>

<body>
    @if (ViewBag.Detail == null)
    {
        <br />
        <br />
        <center><span style="color:gray">暂无数据</span></center>
    }
    else
    {
        <div id="right_div">
            <div id="right_div1">
                <div id="right_divx">
                    <table id="right_table1" class="table table-bordered">
                        <tr>
                            <th>奖金项</th>
                            <th>金额</th>
                            <th>发放人</th>
                            <th>日期</th>
                        </tr>
                    </table>
                </div>
            </div>
            <div id="right_div2">
                <table id="right_table2" class="table table-bordered">
                    @if (ViewBag.Detail != null)
                    {
                        DataTable detail = ViewBag.Detail;
                        for (int i = 0; i < detail.Rows.Count; i++)
                        {
                            <tr onclick="javascript: document.getElementById('@detail.Rows[i]["BonusDataID"]').click();">
                                <td>@detail.Rows[i]["BIName"]</td>
                                <td>@detail.Rows[i]["EarMoney"]</td>
                                <td>@detail.Rows[i]["Name"]</td>
                                <td>@detail.Rows[i]["DisDate"]</td>
                                <td id="bonusID" hidden="hidden"><a href="/DepartBouns/Detail2?depBounsID=@detail.Rows[i]["BonusDataID"]" id="@detail.Rows[i]["BonusDataID"]"></a></td>
                            </tr>
                        }
                    }
                    else
                    {

                    }

                </table>
            </div>
        </div>
    }
    <!--脚本-->
    <script src="~/scripts/jquery-1.10.2.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script type="text/javascript">
    

        //    //进入详情页面
        //function inDetail() {
        //    var depBounsID = $("#bonusID").html();
        //    window.location.href = "/DepartBouns/Detail2?depBounsID=" + depBounsID;
        //}

        //固定和滚动
            var right_div2 = document.getElementById("right_div2");
            right_div2.onscroll = function () {
            var right_div2_top = this.scrollTop;
            var right_div2_left = this.scrollLeft;
            document.getElementById("right_div1").scrollLeft = right_div2_left;
      

        }
    </script>
</body>
</html>
