        //全选
        function GetAll2() {
            var che2 = document.getElementById("Checkbox4");
            var ischeck = che2.checked;
            if (che2.checked == ischeck) {
                var b = document.getElementsByName("cks2");
                for (var i = 0; i < b.length; i++) {
                    b[i].checked = ischeck;
                }
            }
        }

        //批准 
        function EmpPayBonus() {
            var userID = $("#UserID").text();
            var b = document.getElementsByName("cks2");
            //console.log(b);
            var r = 0;
            var cheValue = "";
            for (var i = 0; i < b.length; i++) {
                //alert("状态：" + b[i].checked);
                if (b[i].checked == true) {
                    cheValue += b[i].value + ",";
                    //alert(b[i].value);
                }
                else {
                    r++;
                }
            }
            if (r == b.length) {
                alert("请先选中数据");

            } else {
                cheValue = cheValue.substr(0, cheValue.length - 1);
                //alert(cheValue);
                $.post("/DepositAudit/Ratify", { EmpID: cheValue, UserID: userID }, function (data) {
                    alert(data);
                    location.reload();
                })
            }
        }
        //驳回
        function Reject() {
            var userID = $("#UserID").text();
            var b = document.getElementsByName("cks2");
            //console.log(b);
            var r = 0;
            var cheValue = "";
            for (var i = 0; i < b.length; i++) {
                //alert("状态：" + b[i].checked);
                if (b[i].checked == true) {
                    cheValue += b[i].value + ",";
                    //alert(b[i].value);
                }
                else {
                    r++;
                }
            }
            if (r == b.length) {
                alert("请先选中数据");

            } else {
                cheValue = cheValue.substr(0, cheValue.length - 1);
                //alert(cheValue);
                $.post("/DepositAudit/Reject", { EmpID: cheValue, UserID: userID }, function (data) {
                    alert(data);
                    location.reload();
                })
            }
        }



