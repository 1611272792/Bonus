@using System.Data;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>选择员工</title>
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/weui.css" rel="stylesheet" />
    <link href="~/Content/weui.min.css" rel="stylesheet" />
</head>
<body ontouchstart style="background-color:#f8f8f8">
    <div class="weui-cells__title">选择员工</div>
  
        @if (ViewBag.einfo != null)
        {
            DataTable ei = ViewBag.einfo;

            <div class="weui-cells">
               @for (int i = 0; i < ei.Rows.Count; i++)
                {
                <a class="weui-cell weui-cell_access" href="/EmployeeBouns/BounsDetail?EmpID=@ei.Rows[i]["EmpID"]">
                    <div class="weui-cell__hd"><img src="data:image/png;base64," alt="" style="width:20px;margin-right:5px;display:block"></div>
                    <div class="weui-cell__bd">
                        <p>@ei.Rows[i]["Name"].ToString()</p>
                    </div>
                    <div class="weui-cell__ft">
                    </div>
                </a>
                }
            </div>
        }
        else
        {
                <br />
                <br />
                <center><span style="color:gray">暂无数据</span></center>
                }


    <script type="text/javascript">
    
    </script>
</body>
</html>
