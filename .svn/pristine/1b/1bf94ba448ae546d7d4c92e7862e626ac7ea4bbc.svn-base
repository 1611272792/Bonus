    //删除图片
    $("#contentImg").on("click", ".imgDel", function ()
    {
        
        var del = $(this);
       
        var s = $(this).parent().remove();

        var arr = new Array();
        $("img").each(function ()
        {
            if ($(this).attr("class") == "img2")
            {
                arr.push($(this).attr("src"));
            }
        });
        images.localId = arr;
        //获取图片的localid

        //alert("图片的src:" + images.localId);
        //images.localId[id]
        var a = $(".contentDel");
        //alert("a:" + a.length);
