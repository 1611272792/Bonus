                });
                return false;
            }
            if (comType == "")
            {
                dialog.toast('请输入联系方式，以便我们联系您！', 'error', 3000, function ()
                {

                });
                return false;
            }
            else
            {
                //验证联系方式
                if (comType.length == 11 && comType.indexOf('@@') < 0)
                {
                    //手机号
                    if (!checkMobile(comType))
                    {
                        dialog.toast('请输入正确的联系方式，以便我们联系您', 'error', 3000, function ()
                        {

                        });
                        return false;
                    }
                }
                else
                {
                    //邮箱
                    if (comType.indexOf('@@') < 0)
                    {
                        dialog.toast('请输入正确的联系方式，以便我们联系您', 'error', 3000, function ()
                        {

                        });
                        return false;
                    }
                   
