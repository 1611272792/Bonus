    <style>
        /*父级div相对定位,子级div绝对定位,设置bottom为0把子div放在父div下方*/
        #wod {
            width: 100%;
            height: 160px;
            background-color: #319ee3;
            position: relative; /*相对定位*/
            background-color:#66b4f2;
        }

        #woinfo {
            position: absolute; /*绝对定位*/
            right: 0;
            bottom: 0;
            /*border:1px solid red;*/
            width: 100%;
            height: 25px;
            background-color: #2193dc;
        }

        .userinfo {
            width: 33%;
            display: block;
            float: left;
            text-align: center;
            font-size: 12px;
            vertical-align: middle;
            padding-top: 3px;
        }

        .weui-cell_swiped {
            font-size: 16px;
        }

        .g-view:before {
            height: 0rem;
        }
        .upload {
            position:relative;
        }
        .upload form{width:100%;position:absolute; left:0; top:0;opacity:0; filter:alpha(opacity=0);height:80px;} 
        .upload form input{width: 100%;height:80px;} 

        .demo-icons-me:before {
            color: #4599d5;
        }

        #wo .tabbar-txt {
            color: #4599d5;
        }
    </style>
