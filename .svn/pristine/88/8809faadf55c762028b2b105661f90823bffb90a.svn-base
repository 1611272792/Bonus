function editSure(cid)
{
    var endDate=$("#endDate").val();//结束日期
    var isout = $(":radio[name='IsTongguo']:checked").val()//是否审核
    var beginDate = $("#beginDate").val();//开始日期
    //结束日期不能小于开始日期

    //alert("日期："+endDate+",是否审核:"+isout);
    if(endDate==""||endDate==null){
        $.toast("有效期不能为空", "cancel");
        return false;
    }
    if(isout==""){
        $.toast("不能为空", "cancel");
        return false;
    }
    $.post("/KeHuManager/Sheng", { endDate: endDate, isout: isout, cid: cid, beginDate: beginDate }, function (data)
    {
        if(data=="ok"){
            $.toast("审核成功");
           
        }
        else{
            $.toast(data, "cancel");
            return false;
        }
    })
}
