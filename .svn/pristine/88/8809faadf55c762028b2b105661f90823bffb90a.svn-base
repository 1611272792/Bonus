    <style>
        .text {
            font-size: 16px;
        }

        .selera {
            color: #5bb1e8;
        }

        .addsend {
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 2.5px;
            padding-bottom: 2.5px;
        }

        .ChooseMoney {
            border: 1px solid #319ee3;
